@model IEnumerable<MackPortfolio.DAL.Interfaces.Models.ActivityViewModel>
@foreach (var item in Model)
{
    <section class="panel radius css-box-shadow">
        <article class="row css-article">
            <div class="medium-2 columns text-right">
                <img style="max-height:10em" src="@Url.Content(item.ImageUrl)" />
            </div>
            <div class="medium-10 columns">
                <h3>@item.Title</h3>
                <time datetime="@item.EventDate">@item.EventDate.ToLongDateString()</time>
                <address>@item.Location.Address</address>
                <details>
                    <summary>@item.Summary</summary>
                    <div>
                        Host: <a href="mailto:@(item.HostEmail)">@item.HostBy</a>
                    </div>
                </details>
                <div class="text-right">
                    <ul class="inline-list">
                        <li>@Html.ActionLink("Details", "Details", new { id = item.Id, page = "Details", urlparam = item.UrlParameter })</li>
                        <li>@Html.ActionLink("Edit", "Details", new { id = item.Id, page = "Modify", urlparam = item.UrlParameter })</li>
                        <li>
                            @Ajax.ActionLink("Delete", "Delete", new { id = item.Id }, new AjaxOptions
                                    {
                                        HttpMethod = "Post",
                                        Confirm = "Are you sure you want to delete this?",
                                        UpdateTargetId = "ArticleList"
                                    })
                        </li>
                    </ul>
                </div>
            </div>
        </article>
    </section>
}


